<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FDFDFD</item>
        <item name="colorPrimaryDark">#FDFDFD</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlHighlight">#BFBFBF</item>

    </style>


    <style name="numberPickerCustomSize">
        <item name = "android:textSize">30sp</item>
        <item name = "android:editTextColor">#121212</item>
    </style>


    <style name="AppTheme.MainTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">#FDFDFD</item>
        <item name="android:titleTextStyle">@style/ActionBarTextColor</item>
    </style>
    <style name="ActionBarTextColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>



</resources>
